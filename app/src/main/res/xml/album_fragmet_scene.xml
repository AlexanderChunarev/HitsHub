<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@layout/fragment_album_player_motion_end"
        app:constraintSetStart="@layout/fragment_album_player_motion_start">
        <OnSwipe app:dragDirection="dragUp"
            app:maxAcceleration="100"
            app:touchAnchorId="@+id/parent_recycler_view"/>
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                app:framePosition="20"
                android:scaleX="0.6"
                android:scaleY="0.6"
                app:motionTarget="@+id/imageButton" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="70"
                android:scaleX="0"
                android:scaleY="0"
                app:motionTarget="@+id/imageButton" />

        </KeyFrameSet>
    </Transition>

</MotionScene>